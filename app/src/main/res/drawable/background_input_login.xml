<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Đường viền -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <corners android:radius="15dp" /> <!-- Bán kính lớn hơn nền để lộ viền rõ hơn -->
        </shape>
    </item>

    <!-- Nền trắng với bán kính nhỏ hơn để không che khuất viền ở góc -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="13dp" /> <!-- Giảm bán kính để lộ viền ở các góc -->
        </shape>
    </item>

</layer-list>
